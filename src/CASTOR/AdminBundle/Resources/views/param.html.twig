{% extends "CASTORAdminBundle::layout.html.twig" %}

{% block title %}
    Parametrage
{% endblock %}

{% block content %}

<section class="content-header">
    <h1>
        Gestion
        <small>Parametrage</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Acceuil</a></li>
        <li class="active">Gestion</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <section class="col-lg-12">
            <div class="box solid">
                <div class="box-header">
                    <h3 class="title">Paramétrage pour le contenu des bulletins et périodes</h3>
                </div>
                {{ form_start(form) }}

                {# Les erreurs générales du formulaire. #}
                {{ form_errors(form) }}
                <div class="box-body">
                    <div class="form-group">
                        {{ form_label(form.nomDirecteur, "Nom du Directeur ") }}

                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.nomDirecteur) }}
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-user"></i>
                            </div>
                            {# Génération de l'input. #}
                            {{ form_widget(form.nomDirecteur, {'attr': {'class': 'form-control', 'placeholder' : 'Entrez le nom du directeur' }}) }}
                        </div>
                    </div>
                    <div class="col-xs-4">
                        <div class="form-group">
                            {{ form_label(form.signatureDirecteur, " Signature du Directeur") }}

                            {# Affichage des erreurs pour ce champ précis. #}
                            {{ form_errors(form.signatureDirecteur) }}
                            <div><img src="{{ asset('admin/uploads/img/'~param.signatureDirecteur) }}" width="100px" height="40px"></div>

                            {# Génération de l'input. #}
                            {{ form_widget(form.signatureDirecteur, {'attr': {'class': 'file', 'placeholder' : '' }}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.logo, "Logo ") }}

                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.logo) }}
                        <div><img src="{{ asset('admin/uploads/img/'~param.logo) }}" width="100px" height="40px"></div>

                        {# Génération de l'input. #}
                        {{ form_widget(form.logo, {'attr': {'class': 'file', 'placeholder' : 'Entrez le nom du directeur' }}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.nomEtablissement, "Nom de l'etablissement ") }}

                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.nomEtablissement) }}
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-institution"></i>
                            </div>
                            {# Génération de l'input. #}
                            {{ form_widget(form.nomEtablissement, {'attr': {'class': 'form-control', 'placeholder' : 'Entrez le nom de l\'etablissement' }}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.academie, "Academie ") }}

                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.academie) }}
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-institution"></i>
                            </div>
                            {# Génération de l'input. #}
                            {{ form_widget(form.academie, {'attr': {'class': 'form-control', 'placeholder' : 'Entrez le nom de l\'academie' }}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.anneeScolaire, "Annee Scolaire ") }}

                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.anneeScolaire) }}

                            {# Génération de l'input. #}
                            {{ form_widget(form.anneeScolaire, {'attr': {'class': 'form-control', 'placeholder' : 'Entrez le nom de l\'academie' }}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.adresse, "Annee Scolaire ") }}

                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.adresse) }}

                        {# Génération de l'input. #}
                        {{ form_widget(form.adresse, {'attr': {'class': 'form-control', 'placeholder' : 'Entrez le nom de l\'adresse de l\'etablissement' }}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.codePostal, "Code Postal ") }}

                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.codePostal) }}
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-institution"></i>
                            </div>
                            {# Génération de l'input. #}
                            {{ form_widget(form.codePostal, {'attr': {'class': 'form-control', 'placeholder' : 'Entrez le code postal de l\'etablissement' }}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.ville, "Ville ") }}

                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.ville) }}
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-institution"></i>
                            </div>
                            {# Génération de l'input. #}
                            {{ form_widget(form.ville, {'attr': {'class': 'form-control', 'placeholder' : 'Entrez la ville de l\'etablissement' }}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.telephone, "Telephone ") }}

                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.telephone) }}
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-phone"></i>
                            </div>
                            {# Génération de l'input. #}
                            {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'placeholder' : 'Entrez le telephone ' }}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.email, "Email ") }}

                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.email) }}
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                            </div>
                            {# Génération de l'input. #}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder' : 'Entrez le telephone ' }}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.siteweb, "Site Web ") }}

                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.siteweb) }}
                        <div class="input-group">
                            <div class="input-group-addon">
                               <b> http://</b>
                            </div>
                            {# Génération de l'input. #}
                            {{ form_widget(form.siteweb, {'attr': {'class': 'form-control', 'placeholder' : 'Entrez le site web de l\'etablissement ' }}) }}
                        </div>
                    </div>

                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Valider</button>
                </div>
                {# Génération automatique des champs pas encore écrits.
                             Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
                             et tous les champs cachés (type « hidden »). #}
                {{ form_rest(form) }}

                {# Fermeture de la balise <form> du formulaire HTML #}
                {{ form_end(form) }}
            </div>
        </section>
    </div>
</section>

{% endblock %}

{% block script %}
    <script type="text/javascript">
        $(function () {

            //Activate the iCheck Plugin
            $('input[type="radio"]').iCheck({
                checkboxClass: 'icheckbox_flat-blue',
                radioClass: 'iradio_flat-blue'
            });


        });
    </script>
{% endblock %}