{% extends "CASTORAdminBundle::layout.html.twig" %}

{% block title %}
     Classes
{% endblock %}

{% block content %}

<section class="content-header">
    <h1>
        Classes
        <small>Liste des classes</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Acceuil</a></li>
        <li class="active">Classes</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <section class="col-lg-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Liste des Classes</h3>
                    <div class="box-tools pull-right" data-toggle="tooltip" title="" data-original-title="Nouvelle classe">
                        <div class="btn-group" >
                            <a href="{{ path('castor_admin_add_classes') }}" class="btn btn-default btn-sm "><i class="fa fa-plus text-green"></i></a>
                        </div>
                    </div>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table id="classes" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Code</th>
                            <th>Nom</th>
                            <th>Statut</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for key, val in list %}
                        <tr>
                            <td>{{ val.id }}</td>
                            <td>{{ val.code }}</td>
                            <td>{{ val.nom }}</td>
                            <td>
                                {% if val.isEnabled == 0 %}
                                    <button class="btn btn-block btn-danger btn-flat">Inactif</button>
                                {% elseif val.isEnabled == 1 %}
                                    <button class="btn btn-block btn-success btn-flat" style="width: 80px;">Active</button>
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group">
                                    <button class="btn btn-success btn-flat" type="button">Action</button>
                                    <button data-toggle="dropdown" class="btn btn-success btn-flat dropdown-toggle" type="button">
                                        <span class="caret"></span>
                                        <span class="sr-only">Toggle Dropdown</span>
                                    </button>
                                    <ul role="menu" class="dropdown-menu">
                                        <li><a href="{{ path('castor_admin_edit_classes', {'id': val.id}) }}" onclick="">Modifier</a></li>
                                        <li><a href="" onclick=" return confirm('Voulez-vous vraiment supprimer [{{  val.nom }}] ?');">Supprimer</a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Code</th>
                            <th>Nom</th>
                            <th>Statut</th>
                            <th>Action</th>
                        </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </section>
    </div>
</section>

{% endblock %}

{% block script %}
    <script type="text/javascript">
        $(function () {

            $('#classes').dataTable({
                "bPaginate": true,
                "bLengthChange": false,
                "bFilter": true,
                "bSort": true,
                "bInfo": true,
                "bAutoWidth": false
            });
        });
    </script>
{% endblock %}